# NextAuth 설정
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Google OAuth 설정
# Google Cloud Console에서 OAuth 2.0 클라이언트 ID 생성
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Supabase 설정
# https://supabase.com/dashboard 에서 프로젝트 생성 후 확인
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase Storage 설정 (대용량 파일 업로드용)
# 1. Supabase Dashboard > Storage에서 'pdf-uploads' 버킷 생성
# 2. 버킷 정책 설정: 인증된 사용자만 업로드 가능하도록 설정

# Google Cloud Vision OCR 설정
# Vision API 활성화 필요: https://console.cloud.google.com/apis/library/vision.googleapis.com
#
# [방법 1 - Vercel 권장] 개별 환경변수 사용:
# Google Cloud Console에서 서비스 계정 생성 후 각 필드를 개별 환경변수로 설정
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n"

# [방법 2 - 로컬 개발용] JSON 전체 사용:
# GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"...","private_key":"...",...}

# Google Gemini API 설정 (AI 기반 동적 파싱용)
# Google AI Studio에서 API 키 생성: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Google Document AI 설정 (테이블 추출 전용)
# 1. Document AI API 활성화: https://console.cloud.google.com/apis/library/documentai.googleapis.com
# 2. 프로세서 생성: https://console.cloud.google.com/ai/document-ai/processors
#    - Form Parser 또는 Layout Parser 선택
# 3. 프로세서 ID는 생성된 프로세서 상세 페이지에서 확인
GOOGLE_CLOUD_PROJECT_ID=your-project-id
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
DOCUMENT_AI_LOCATION=us

# 파싱 결과 캐싱 설정
# 동일 파일 재처리 시 캐시에서 빠르게 로드 (Supabase parsing_cache 테이블 필요)
ENABLE_PARSING_CACHE=true
CACHE_TTL_DAYS=30
